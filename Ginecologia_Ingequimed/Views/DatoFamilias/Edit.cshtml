@model Ginecologia_Ingequimed.Models.DatoFamily

@{
    ViewData["Title"] = "Edit";
}

<h1 style="color:#43180E">Edita tu Foto</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FotografiaPerfil" class="control-label"></label>
                <input asp-for="FotografiaPerfil" class="form-control" />
                <span asp-validation-for="FotografiaPerfil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="background-color:#cab4b4" href="https://localhost:44361" type="submit" value="Save" class="btn btn" />

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
