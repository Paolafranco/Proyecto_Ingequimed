@model Ginecologia_Ingequimed.Models.DatoFamiliar

@{
    ViewData["Title"] = "Edit";
}

<h1 style="color:#A04000">Edita tu Foto</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ImagenProducto" class="control-label"></label>
                @*<input asp-for="ImagenProducto" class="form-control" />*@
                <img asp-for="ImagenProducto" src="@Url.Action("RenderImage", new { Id = Model.Id})" width="300" height="300" />
                <span asp-validation-for="ImagenProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="background-color:#F5CBA7" type="submit" value="Save" class="btn btn" />

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
