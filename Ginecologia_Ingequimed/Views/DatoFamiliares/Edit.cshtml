@model Ginecologia_Ingequimed.Models.DatoFamiliar

@{
    ViewData["Title"] = "Edit";
}

<h1 style="color:#43180E">Edita tu Foto</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="col-auto w-50 h-50">
                <img src="@("/Image/" + Model.ImageName)" asp-append-version="true" class="w-50 h-50" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <input style="background-color:#cab4b4" href="https://localhost:44361" type="submit" value="Save" class="btn btn" />

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
